// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  email     String     @unique
  password  String
  playlists Playlist[] //USER has many PLAYLISTS
}

model Song {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  name      String
  playlists Playlist[] //SONG belongs to many PLAYLISTS
  duration  Int
  url       String
  artist    Artist     @relation(fields: [artistId], references: [id])
  artistId  Int        //SONG belongs to one ARTIST
}

model Artist {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  songs     Song[]   //ARTIST has many SONGS
  name      String   @unique
}

model Playlist {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  songs     Song[]   //PLAYLIST has many SONGS
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      //PLAYLIST belongs to one USER
}
